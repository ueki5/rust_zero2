    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'regex'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=regex",
                    "--package=regex"
                ],
                "filter": {
                    "name": "regex",
                    "kind": "bin"
                }
            },
            "args": [
                "-r",
                "(abcd|cc)+",
                "-i",
                "input/regex.txt"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'regex'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=regex",
                    "--package=regex"
                ],
                "filter": {
                    "name": "regex",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}